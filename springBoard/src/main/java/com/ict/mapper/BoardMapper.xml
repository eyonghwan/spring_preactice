<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http:/mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ict.mapper.BoardMapper">
<select id="getList" resultType="com.ict.vo.BoardVO">
	<![CDATA[
		SELECT * FROM board_tbl WHERE bno < 4
	]]>	
</select>

<insert id="insert">
	INSERT INTO board_tbl (bno, title, content, writer)
		VALUES
	(board_num.nextval, #{title}, #{content}, #{writer})
</insert>

<select id="select" resultType="com.ict.vo.BoardVO">
	SELECT * FROM borad_tbl WHERE bno= #{bno}
</select>

</mapper>